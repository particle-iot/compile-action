{
  "name": "compile-action",
  "version": "0.1.0-1",
  "private": true,
  "description": "GitHub action for Particle Compile",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts -f unix",
    "lint:fix": "eslint src/**/*.ts --fix -f unix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --coverage",
    "all": "npm run build && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/particle-iot/compile-action.git"
  },
  "keywords": [
    "actions",
    "particle",
    "compile"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "execa": "^5.0.0",
    "glob": "^7.2.3",
    "particle-api-js": "^9.4.1"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.36.0",
    "eslint-config-particle": "^2.5.0",
    "eslint-plugin-github": "^4.6.1",
    "eslint-plugin-jest": "^25.7.0",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "ts-jest": "^27.1.5",
    "typescript": "^4.9.5"
  }
}
